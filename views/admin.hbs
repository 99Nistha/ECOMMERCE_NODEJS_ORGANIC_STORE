<div class="container mt-4">
    <main role="main">
        <div class="row">
            <h1>Orders</h1>
            <div class="table responsible-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Order</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#r=each order}}
                        <tr>
                            <td>{{this._id}}</td>
                            <td>{{this.order}}</td>
                            <td>{{this.total}}</td>
                            <td>
                                <a class="btn btn-primary" href="/order/{{this._id}}">Update</a>
                                <a class="btn btn-danger" href="/order/delete/{{this._id}}">Delete</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
